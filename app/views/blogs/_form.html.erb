<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, :title => "Michael Harris Portfolio", sticky: false) %>
    <% end %>
  <% end %>

  <div class="form_group">
    <%= form.text_field :title, id: :blog_title, class: 'form-control line-spacer', placeholder: 'Title' %>
  </div>

  <div class="form_group">
    <%= form.text_area :body, id: :blog_body, rows: 15, class: 'form-control', placeholder: 'Content' %>
  </div>

  <div class="form_group">
    <%= form.submit "Submit", class: 'btn btn-primary line-spacer' %>
  </div>
<% end %>